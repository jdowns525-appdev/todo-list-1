<div>
  <div>
    <h1>
      Your todo list
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new todo
    </h2>

   <form action="/insert_todo" method="post">
      <div>
        <label for="content_box">
          Describe the task:
        </label>

        <input type="text" id="content_box" name="query_content">
      </div>

     <button>
        Add to Next Up
      </button>
    </form>
  </div>
</div>

<div class="next_up">
  <h2>Next Up</h2>

  <% @list_of_todos.each do |a_todo| %>

    <ul>
      <li>
        <div><%= a_todo.content %></div>

        <small>added <%= time_ago_in_words(a_todo.created_at) %> ago

        <a href="/delete_todo/<%= a_todo.id %>">Delete</a></small>
        
        <form action="/modify_todo/:path_id" method="post">
        <input type="hidden" name="query_status" value="in_progress">
        <button>Move to In Progress</button>
        </form>
      </li>
    </ul>
  <% end %>
</div>

<div class="in_progress">

  <h2>In Progress</h2>

  <% @list_of_todos.each do |a_todo_progress| %>

  <ul>
      <li>
        <div><%= a_todo_progress.content %></div>

        <small>started <%= time_ago_in_words(a_todo_progress.created_at) %> 
        
          <a href="/delete_todo/<%= a_todo_progress.id%>">Delete</a>
        </small>

        <form action="/modify_todo/<%= a_todo_progress.id%>" method="post">
          <input type="hidden" name="query_status" value="done">
          <button>Move to Done</button>
        </form>
      </li>
  </ul>
  <% end %>
</div>

<div class="done">

  <h2>Done</h2>

  <% @list_of_todos.each do |a_todo| %>
  <ul>
      <li>
        <div><%= a_todo.content %></div>

        <small>
          Completed <%= time_ago_in_words(a_todo.created_at) %>

          <a href="/delete_todo/<%= a_todo.id %>">Delete</a>
        </small>        
      </li>
  </ul>
  <% end %>
</div>
